# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/arogya_ai

# JWT Configuration
JWT_SECRET=arogya-ai-super-secret-jwt-key-2024-health-screening-platform
JWT_REFRESH_SECRET=arogya-ai-refresh-secret-jwt-key-2024-health-platform
JWT_EXPIRE=1d
JWT_REFRESH_EXPIRE=7d

# Frontend URL
FRONTEND_URL=http://localhost:5176

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12

# AI/ML Service Configuration (Optional)
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=arogya-ai-ml-service-key

# Emergency Services Configuration
EMERGENCY_SERVICES_API_URL=https://api.emergency-services.com
EMERGENCY_SERVICES_API_KEY=emergency-api-key

# Health Data Encryption
HEALTH_DATA_ENCRYPTION_KEY=arogya-health-data-encrypt-key-32c

# Socket.IO Configuration
SOCKET_IO_ORIGINS=http://localhost:5176